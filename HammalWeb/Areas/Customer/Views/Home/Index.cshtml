<!DOCTYPE html>
<html>
<head>
  <title>Carousel Example</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
  
</head>
<style>
  #deneme {
    background-image: url("https://cdn.nar.realtor/sites/default/files/styles/inline_paragraph_image/public/assets/images/2008_RMO_DiverseAgents.jpg?itok=BTXGfpfp");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    height: 120vh;
    width: 100vw;
    position: relative;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.6);
    mix-blend-mode: darken;
  }

  .hero {
  position: relative;
  overflow: hidden;
}

 screen and (min-width: 992px) {
  .hero {
    height: 100vh;
  }

  

  .sticky-wrapper {
    position: relative;
    bottom: 76px;
  }
}

.heroText {
  position: absolute;
  z-index: 9;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  text-align: center;
}

</style>

<body>


  <div class="container-fluid p-0 mb-5">
    <div id="header-carousel" class="carousel slide" >
      <div class="">
        <div class="" style="height:500px;">
          <img class="w-100" src="~/images/forecourt-g1e1c04246_1920.jpg" alt="Image">
          <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
            <div class="p-3" style="max-width: 700px;">
              <h6 class="section-title text-white text-uppercase mb-3">Hammal</h6>
              <h1 class="display-3 text-white mb-4">Sen İşini Ona Bırak</h1>
              <h3 class="display-7 text-white mb-4"> Ayrıcalıklarını Yaşa</h3>
              <a href="" class="btn btn-primary py-md-3 px-md-5 me-3">Hammal Dünyasına Katıl</a>
              <a href="" class="btn btn-light py-md-3 px-md-5 ">Hammal Size Gelsin</a>
            </div>
          </div>
        </div>      
      </div>
     
    </div>
  </div>


  <h3 class="mt-3" style="text-align:center">Hizmetler Parmağınızın Ucunda</h3>

  <section class="mb-3" style="background-color:whitesmoke">

    <div class="container mt-4">
      <div class="row justify-content-center">
        @for (int i = 0; i < 12; i++)
        {
          <div class="col-md-3 mb-3">
            <div class="card border-0" style="border-radius:10px">
              <img src="/images/backgroundImg.png" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Ev Temizliği</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <div class="row justify-content-center">
                  <button href="#" style="background-color:#1099e3;" class="btn text-white">Go somewhere</button>
                </div>
              </div>
            </div>
          </div>
          @if ((i + 1) % 4 == 0)
          {
            <div class="row justify-content-center">
            </div>
          }
        }
      </div>
    </div>
  </section>
  <section>
    <img class="d-block w-100" src="/images/index1.png" style="max-height: 700px;" alt="Second slide">
  </section>
  <section style="height:100px;background-color:whitesmoke">
   
  </section>
  <section>
    <img class="d-block w-100" src="/images/index2.png" style="max-height: 700px;" alt="Second slide">
  </section>


</body>
</html>