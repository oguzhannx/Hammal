@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <script>
    $(function () {
      $('#citiesDropdown').change(function () {
        debugger;

        var id = $(this).val();
        //$('#districtDropdown').empty();
        $('#districtDropdown').append(id)

        $.ajax({
          url: "@Url.Action("GetDistricts","Identity",new {Area="Identity"})",
          type: 'GET',
          data: { id: id },
          success: function (data) {
            $('#districtDropdown').empty();
            $('#districtDropdown').append($('<option>').text('--Select District--').attr('value', ''));

            $.each(data, function (i, item) {
              $('#districtDropdown').append($('<option>').text(item.text).attr('value', item.value));
            });
          },
          error: function (xhr, status, error) {

            console.log(error);
          }
        });

      });
    });
  </script>
}


