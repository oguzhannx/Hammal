@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Roller</h1>

<p>
  <a asp-action="Create" class="btn btn-primary">Yeni Rol Ekle</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Ad</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var role in Model)
    {
      <tr>
        <td>@role.Id</td>
        <td>@role.Name</td>
      </tr>
    }
  </tbody>
</table>
