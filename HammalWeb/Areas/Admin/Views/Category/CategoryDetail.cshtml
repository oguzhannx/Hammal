@model List<AltCategory>


<main class="container">

  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Suggestions</h6>

    @{
      foreach (var altCategory in Model)
      {
        <div class="d-flex text-muted pt-3">
          <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
            <div class="row">
              <div class="col-md-1">
                <img class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="130" height="100" src="@altCategory.ImgPath" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false" /><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff" /><text x="50%" y="50%" fill="#007bff" dy=".3em"></text>
              </div>
              <div class="col-md-8 ml-2">
                <div class="row">
                  <div class="d-flex justify-content-between">
                    <strong class="text-gray-dark mt-4 ms-lg-5 text-left">@altCategory.Name</strong>
                  </div>
                </div>
                <div class="row">
                  <div class="d-flex justify-content-between">
                    <p class="text-gray-dark mt-4 ms-lg-5 text-left">@altCategory.Aciklama</p>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="d-flex justify-content-between">
                  <a type="button" asp-controller="Service" asp-action="CategoryDetail" asp-route-id="@altCategory.Id" asp-area="Admin" class="btn btn-sm btn-warning ">Teklif Al</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    }



  </div>
</main>